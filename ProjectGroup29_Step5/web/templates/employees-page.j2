{% extends “layouts/main.html” %}
{% block body %}
<div>
    <h3>Employees</h3>
    <table>
        <thead>
            <th>EmployeeID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Phone Number</th>
        </thead>
        <tbody>
        {% for r in employee %}
        <tr>
            <td> {{ r.0 }}</td>
            <td> {{ r.1 }}</td>
            <td> {{ r.2 }}</td>
            <td> {{ r.3 }}</td>
            <td> {{ r.4 }}</td>
            <td> {{ r.5 }}</td>
            <td> <input type='button' name='Update' value='Update' onclick="window.location = '/update-employee/{{r[0]}}'"> </td>
            <td> <input type='button' name='Delete' value='Delete' onclick="window.location = '/delete-employee/{{r[0]}}'"> </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}